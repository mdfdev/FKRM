@page
@model LoginModel

    <div class="row flex-center min-vh-100 py-6">
        <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
            <a class="d-flex flex-center mb-4" href="#">
                <img class="mr-2" src="~/img/illustrations/falcon.png" alt="" width="58" />
                <span class="text-sans-serif font-weight-extra-bold fs-5 d-inline-block">فنی و کاردانش</span>
            </a>
            <div class="card">
                <div class="card-body p-4 p-sm-5">
                    <form id="account" method="post">
                        <h4>ورود به سیستم</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Input.EmployeeId" class="form-control" autocomplete="off"  placeholder="نام کاربری"/>
                            <span asp-validation-for="Input.EmployeeId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" class="form-control" autocomplete="off"  placeholder="کلمه عبور"/>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" type="checkbox" checked="checked" asp-for="Input.RememberMe" />
                                    <label class="custom-control-label" asp-for="Input.RememberMe">مرا به خاطر بسپار</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group"><button class="btn btn-primary btn-block mt-3" type="submit" name="submit">ورود</button></div>
                    </form>
  
                </div>
            </div>
        </div>
    </div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
