@model FKRM.Application.ViewModels.AreaViewModel
<form id="create-form" method="post" asp-controller="Area" asp-action="OnPostCreateOrEdit"
      asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">نام</label>
                <div class="col-md-9">
                    <input type="text" asp-for="Name" name="Name" class="form-control" placeholder="نام زمینه">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">شاخه</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select name="BranchId" class="form-control select2bs4" id="BrandId" asp-for="BranchId" asp-items="@Model.Branches">
                        </select>
                    </div>
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">ذخیره</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">انصراف</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
    $("#BranchId").select2({
        placeholder: "انتخاب شاخه...",
        theme: "bootstrap4",
        escapeMarkup: function (m) {
            return m;
        }
    });
</script>