@model FKRM.Application.ViewModels.RoomViewModel
<form id="create-form" method="post" asp-controller="Room" asp-action="OnPostCreateOrEdit" 
      asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">

            <div class="form-group row">
                <label class="col-md-4 col-form-label">مدرسه</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="SchoolId" class="custom-select custom-select-sm mb-3" id="SchoolId" asp-for="SchoolId" asp-items="@Model.Schools">
                        </select>
                    </div>
                    <span asp-validation-for="SchoolId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">نام کلاس</label>
                <div class="col-md-8">
                    <input type="text" asp-for="Name" name="Name" class="form-control" placeholder="نام کلاس">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">ذخیره</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">انصراف</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $(document).ready(function () {
        $.validator.unobtrusive.parse(document);

        $("#SchoolId").select({
            placeholder: "انتخاب مدرسه...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
    });
  
</script>