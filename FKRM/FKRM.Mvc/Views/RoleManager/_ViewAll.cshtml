@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<table id="roleTable" class="table table-hover table-sm table-striped data-table no-wrap mb-0 fs--1 w-100">
    <thead class="bg-200">
        <tr>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Name)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody class="bg-white">
        @foreach (var role in Model)
        {
            <tr class="hover-actions-trigger hover-shadow">
                <td>
                    @role.Name
                </td>
               
                <td>
                    <div class="btn-group btn-group-sm hover-actions r-0" role="group">

                        <form id="form_delete_@role.Id" asp-controller="RoleManager" method="post"
                              asp-action="OnPostDelete" asp-route-id="@role.Id" onsubmit="return jQueryModalDelete(this)">
                            <a href="javascript:$('#form_delete_@role.Id').submit();" data-placement="top" class="btn btn-light">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </form>

                        <button class="btn btn-light" onclick="jQueryModalGet('/rolemanager/OnGetCreateOrEdit?id=@role.Id','ویرایش نقش')"
                                type="button" data-placement="top" title="ویرایش">
                            <span class="fas fa-edit"></span>
                        </button>
                        <a class="btn btn-light"  title="Snooze"><span class="fas fa-clock"></span></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    <tfoot class="bg-200">
        <tr>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </tfoot>
</table>
<script>
    $(document).ready(function () {
        $("#roleTable").DataTable({
            responsive: true,
            "order": [[0, "asc"]]           
        });
    });
</script>
