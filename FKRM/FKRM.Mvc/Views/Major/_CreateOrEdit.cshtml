@model FKRM.Application.ViewModels.MajorViewModel
<form id="create-form" method="post" asp-controller="Major" asp-action="OnPostCreateOrEdit" 
      asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group row">
                <label class="col-md-4 col-form-label">رشته تحصیلی</label>
                <div class="col-md-8">
                    <input type="text" asp-for="Name" name="Name" class="form-control" placeholder="نام رشته">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">کد رایانه ای</label>
                <div class="col-md-8">
                    <input type="number" asp-for="ComputerCode" name="ComputerCode" class="form-control" placeholder="کد رایانه ای">
                    <span asp-validation-for="ComputerCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">تعداد واحد الزامی</label>
                <div class="col-md-8">
                    <input type="number" asp-for="RequiredCredit" name="RequiredCredit" class="form-control" placeholder="تعداد واحد الزامی">
                    <span asp-validation-for="RequiredCredit" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">تعداد واحد اختیاری یا انتخابی</label>
                <div class="col-md-8">
                    <input type="number" asp-for="OptionalElectiveCredit" name="OptionalElectiveCredit" class="form-control" placeholder="کد رایانه ای">
                    <span asp-validation-for="OptionalElectiveCredit" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">تعداد واحد فارغ التحصیلی</label>
                <div class="col-md-8">
                    <input type="number" asp-for="GraduationCredits" name="GraduationCredits" class="form-control" placeholder="کد رایانه ای">
                    <span asp-validation-for="GraduationCredits" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">شاخه</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="BranchId" class="custom-select custom-select-sm mb-3" id="BranchId" asp-for="BranchId" asp-items="@Model.Branches">
                        </select>
                    </div>
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">زمینه</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="AreaId" class="custom-select custom-select-sm mb-3" id="AreaId" asp-for="AreaId" asp-items="@Model.Areas">
                        </select>
                    </div>
                    <span asp-validation-for="AreaId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">گروه</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="GroupId" class="custom-select custom-select-sm mb-3" id="GroupId" asp-for="GroupId">
                        </select>
                    </div>
                    <span asp-validation-for="GroupId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">ذخیره</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">انصراف</button>
    </div>
</form>
<script type="text/javascript" language=javascript>

    $(document).ready(function () {
        function GetAreas() {
            $.get("/Area/GetAreaList", { BranchId: $("#BranchId").val() }, function (data) {
                $("#AreaId").empty();
                $.each(data, function (index, row) {
                    $("#AreaId").append("<option value='" + row.id + "'>" + row.name + "</option>")
                });
                GetGroups();
            });
        };
        function GetGroups() {
            $.get("/Group/GetGroupList", { AreaId: $("#AreaId").val() }, function (data) {
                $("#GroupId").empty();
                $.each(data, function (index, row) {
                    $("#GroupId").append("<option value='" + row.id + "'>" + row.name + "</option>")
                });
            });
        };
        GetAreas();
        $("#BranchId").select({
            placeholder: "انتخاب شاخه...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        }).on('change', function (e) {
            GetAreas();
        });

        $("#AreaId").select({
            placeholder: "انتخاب زمینه...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        }).on('change', function (e) {
            GetGroups();
        });
    });
</script>