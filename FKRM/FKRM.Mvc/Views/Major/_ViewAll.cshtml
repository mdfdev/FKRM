@model IEnumerable<FKRM.Application.ViewModels.MajorViewModel>

<table id="majorTable" class="table table-sm table-dashboard data-table no-wrap mb-0 fs--1 w-100">
    <thead class="bg-200">
        <tr>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.ComputerCode)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.RequiredCredit)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.OptionalElectiveCredit)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.GraduationCredits)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="bg-white">
        @foreach (var major in Model)
        {
        <tr>
            <td>
                @major.Name
            </td>
            <td>
                @major.ComputerCode
            </td>
            <td>
                @major.RequiredCredit
            </td>
            <td>
                @major.OptionalElectiveCredit
            </td>
            <td>
                @major.GraduationCredits
            </td>
            <td>
                @major.Branch
            </td>
            <td>
                @major.Area
            </td>
            <td>
                @major.Group
            </td>
            <td>
                @major.AddedDate
            </td>
            <td>
                @major.ModifiedDate
            </td>
            <td class="align-middle white-space-nowrap">
                <div class="dropdown text-sans-serif">
                    <button class="btn btn-link text-600 btn-sm dropdown-toggle btn-reveal mr-3" type="button" id="dropdown0"
                            data-toggle="dropdown" data-boundary="html" aria-haspopup="true" aria-expanded="false">
                        <span class="fas fa-ellipsis-h fs--1"></span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right border py-0" aria-labelledby="dropdown0">
                        <div class="bg-white py-2">
                            <a onclick="jQueryModalGet('/major/OnGetCreateOrEdit?id=@major.Id','ویرایش اطلاعات شاخه')"
                               class="dropdown-item"><i class="fas fa-pencil-alt"></i>  ویرایش</a>
                            <div class="dropdown-divider"></div>
                            <form id="form_delete_@major.Id" asp-controller="Major" method="post" asp-action="OnPostDelete"
                                  asp-route-id="@major.Id" onsubmit="return jQueryModalDelete(this)">
                                <a href="javascript:$('#form_delete_@major.Id').submit();" class="dropdown-item text-danger"><i class="fas fa-trash-alt"></i>  حذف</a>
                            </form>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#majorTable").DataTable({
            order: [[5, 'asc'], [6, 'asc'], [7, 'asc']],
            columnDefs: [
                {
                    "targets": [8, 9],
                    "visible": false
                }
            ],
        });
    });
</script>
