@model CourseViewModel
<form id="create-form" method="post" asp-controller="Course" asp-action="OnPostCreateOrEdit"
      asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-md-4 col-form-label">نام درس</label>
                <div class="col-md-8">
                    <input type="text" asp-for="Name" name="Name" class="form-control" placeholder="نام درس">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">کد درس</label>
                <div class="col-md-8">
                    <input type="text" asp-for="Code" name="Code" class="form-control" placeholder="کد درس">
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">تعداد واحد</label>
                <div class="col-md-8">
                    <input type="number" asp-for="Credits" maxlength="6" name="Credits" class="form-control" placeholder="تعداد واحد">
                    <span asp-validation-for="Credits" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">حد نصاب قبولی</label>
                <div class="col-md-8">
                    <input type="number" asp-for="PassMark" maxlength="2" name="PassMark" class="form-control" placeholder="حد نصاب قبولی">
                    <span asp-validation-for="PassMark" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">ساعت هفتگی عملی</label>
                <div class="col-md-8">
                    <input type="number" asp-for="PracticalWeeklyHours" maxlength="2" name="PracticalWeeklyHours" class="form-control" placeholder="ساعت هفتگی عملی">
                    <span asp-validation-for="PracticalWeeklyHours" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">ساعت هفتگی نظری</label>
                <div class="col-md-8">
                    <input type="number" asp-for="TheoreticalWeeklyHours" maxlength="2" name="TheoreticalWeeklyHours" class="form-control" placeholder="ساعت هفتگی نظری">
                    <span asp-validation-for="TheoreticalWeeklyHours" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">شاخه</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="BranchId" class="custom-select custom-select-sm mb-3" id="BranchId" asp-for="BranchId" asp-items="@Model.Branches">
                        </select>
                    </div>
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">زمینه</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="AreaId" class="custom-select custom-select-sm mb-3" id="AreaId" asp-for="AreaId" asp-items="@Model.Areas">
                        </select>
                    </div>
                    <span asp-validation-for="AreaId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">گروه</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="GroupId" class="custom-select custom-select-sm mb-3" id="GroupId" asp-for="GroupId" asp-items="@Model.Groups">
                        </select>
                    </div>
                    <span asp-validation-for="GroupId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">رشته</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="MajorId" class="custom-select custom-select-sm mb-3" id="MajorId" asp-for="MajorId">
                        </select>
                    </div>
                    <span asp-validation-for="MajorId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">پایه</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="GradeId" class="custom-select custom-select-sm mb-3" id="GradeId" asp-for="GradeId" asp-items="@Model.Grades">
                        </select>
                    </div>
                    <span asp-validation-for="GradeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">مدل نمره دهی</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="MarkingTypeId" class="custom-select custom-select-sm mb-3" id="MarkingTypeId" asp-for="MarkingTypeId" asp-items="@Model.MarkingTypes">
                        </select>
                    </div>
                    <span asp-validation-for="MarkingTypeId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">ذخیره</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">انصراف</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $(document).ready(function () {
        function GetAreas() {
            $.get("/Area/GetAreaList", { BranchId: $("#BranchId").val() }, function (data) {
                $("#AreaId").empty();
                $.each(data, function (index, row) {
                    $("#AreaId").append("<option value='" + row.id + "'>" + row.name + "</option>")
                });
                GetGroups();
            });
        };
        function GetGroups() {
            $.get("/Group/GetGroupList", { AreaId: $("#AreaId").val() }, function (data) {
                $("#GroupId").empty();
                $.each(data, function (index, row) {
                    $("#GroupId").append("<option value='" + row.id + "'>" + row.name + "</option>")
                });
                GetMajors();
            });
        };
        function GetMajors() {
            $.get("/Major/GetMajorList", { GroupId: $("#GroupId").val() }, function (data) {
                $("#MajorId").empty();
                $.each(data, function (index, row) {
                    $("#MajorId").append("<option value='" + row.id + "'>" + row.name + "</option>")
                });
            });
        };
        $("#GradeId").select({
            placeholder: "انتخاب پایه...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
        $("#MarkingTypeId").select({
            placeholder: "انتخاب مدل نمره دهی...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
        GetAreas();
        $("#BranchId").select({
            placeholder: "انتخاب شاخه...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        }).on('change', function (e) {
            GetAreas();
        });

        $("#AreaId").select({
            placeholder: "انتخاب زمینه...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        }).on('change', function (e) {
            GetGroups();
        });
        $("#GroupId").select({
            placeholder: "انتخاب گروه...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        }).on('change', function (e) {
            GetMajors();
        });
    });
</script>