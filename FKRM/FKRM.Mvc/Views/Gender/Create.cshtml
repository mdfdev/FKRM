@model FKRM.Application.ViewModels.GenderViewModel

<div class="modal-header">
    <button class="btn btn-sm pull-right btn-danger" type="button" id="btnCloseModal" data-dismiss="modal">X</button>
    <h2>Create</h2>
</div>
<div class="modal-body">
    @using (Html.BeginForm())
    {
        <div class="form-horizontal" id="CreateForm">
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-xs-4" })
                <div class="col-xs-5">
                    <input class="form-control" type="text" name="Name" id="Name" placeholder="required" />
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-sm btn-success" type="button" onclick="CreateNew()">Save</button>
        </div>
    }
</div>