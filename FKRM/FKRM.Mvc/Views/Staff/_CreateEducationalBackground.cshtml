@model StaffEducationalBackgroundViewModel
<form id="create-form" method="post" asp-controller="Staff" asp-action="OnGetCreateEducationalBackground"
      asp-route-StaffId="@Model.StaffId" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-md-4 col-form-label">مقطع تحصیلی</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="AcademicDegreeId" class="custom-select custom-select-sm mb-3" id="AcademicDegreeId" asp-for="AcademicDegreeId" asp-items="@Model.AcademicDegrees">
                        </select>
                    </div>
                    <span asp-validation-for="AcademicDegreeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">رشته تحصیلی</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="AcademicMajorId" class="custom-select custom-select-sm mb-3" id="AcademicMajorId" asp-for="AcademicMajorId" asp-items="@Model.AcademicMajors">
                        </select>
                    </div>
                    <span asp-validation-for="AcademicMajorId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">ذخیره</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">انصراف</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $(document).ready(function () {

        $("#AcademicDegreeId").select({
            placeholder: "انتخاب مقطع تحصیلی...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
        $("#AcademicMajorId").select({
            placeholder: "انتخاب رشته تحصیلی ...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
    });
</script>