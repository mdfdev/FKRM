@model FKRM.Application.ViewModels.StaffViewModel
<form id="create-form" method="post" asp-controller="Staff" asp-action="OnPostCreateOrEdit" 
      asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-md-4 col-form-label">نام</label>
                <div class="col-md-8">
                    <input type="text" asp-for="FirstName" name="FirstName" class="form-control" placeholder="نام">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">نام خانوادگی</label>
                <div class="col-md-8">
                    <input type="text" as asp-for="LastName" name="LastName" class="form-control" placeholder="نام خانوادگی">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">موبایل</label>
                <div class="col-md-8">

                    <input type="text" as asp-for="Mobile" name="Mobile" class="form-control" maxlength="11" placeholder="موبایل">
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">تلفن</label>
                <div class="col-md-8">

                    <input type="text" as asp-for="Phone" name="Phone" class="form-control" maxlength="11" placeholder="تلفن">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">کدملی</label>
                <div class="col-md-8">

                    <input type="text" as asp-for="NationalCode" name="NationalCode" class="form-control" maxlength="10" placeholder="کد ملی">
                    <span asp-validation-for="NationalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">عنوان شغلی</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="JobTitleId" class="custom-select custom-select-sm mb-3" id="JobTitleId" asp-for="JobTitleId" asp-items="@Model.JobTitles">
                        </select>
                    </div>
                    <span asp-validation-for="JobTitleId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">مدرسه</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="SchoolId" class="custom-select custom-select-sm mb-3" id="SchoolId" asp-for="SchoolId" asp-items="@Model.Schools">
                        </select>
                    </div>
                    <span asp-validation-for="SchoolId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">سال تحصیلی</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="AcademicCalendarId" class="custom-select custom-select-sm mb-3" id="AcademicCalendarId" asp-for="AcademicCalendarId" asp-items="@Model.AcademicCalendars">
                        </select>
                    </div>
                    <span asp-validation-for="AcademicCalendarId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">ذخیره</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">انصراف</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $(document).ready(function () {
        $("#JobTitleId").select({
            placeholder: "انتخاب عنوان شغلی...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
        $("#SchoolId").select({
            placeholder: "انتخاب مدرسه ...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
        $("#AcademicCalendarId").select({
            placeholder: "انتخاب سال تحصیلی ...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
    });
</script>