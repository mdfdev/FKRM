@model FKRM.Application.ViewModels.StaffViewModel
<form id="create-form" method="post" asp-controller="Staff" asp-action="OnPostCreateOrEdit" 
      asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">نام</label>
                <div class="col-md-9">
                    <input type="text" asp-for="FirstName" name="FirstName" class="form-control" placeholder="نام">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">نام خانوادگی</label>
                <div class="col-md-9">
                    <input type="text" as asp-for="LastName" name="LastName" class="form-control" placeholder="نام خانوادگی">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">موبایل</label>
                <div class="col-md-9">

                    <input type="text" as asp-for="Mobile" name="Mobile" class="form-control" placeholder="موبایل">
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">تلفن</label>
                <div class="col-md-9">

                    <input type="text" as asp-for="Phone" name="Phone" class="form-control" placeholder="تلفن">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">کدملی</label>
                <div class="col-md-9">

                    <input type="text" as asp-for="NationalCode" name="NationalCode" class="form-control" placeholder="کد ملی">
                    <span asp-validation-for="NationalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">ذخیره</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">انصراف</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>