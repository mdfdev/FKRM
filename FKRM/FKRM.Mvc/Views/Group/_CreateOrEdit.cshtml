@model FKRM.Application.ViewModels.GroupViewModel
<form id="create-form" method="post" asp-controller="Group" asp-action="OnPostCreateOrEdit"
      asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">نام گروه</label>
                <div class="col-md-9">
                    <input type="text" asp-for="Name" name="Name" class="form-control" placeholder="نام گروه">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">شاخه</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select name="BranchId" class="custom-select custom-select-sm mb-3" id="BranchId" asp-for="BranchId" asp-items="@Model.Branches">
                        </select>
                    </div>
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">زمینه</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select name="AreaId" class="custom-select custom-select-sm mb-3" id="AreaId" asp-for="AreaId">
                        </select>
                    </div>
                    <span asp-validation-for="AreaId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">ذخیره</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">انصراف</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $(document).ready(function () {
        function GetAreas() {
            $.get("/Area/GetAreaList", { BranchId: $("#BranchId").val() }, function (data) {
                $("#AreaId").empty();
                $.each(data, function (index, row) {
                    $("#AreaId").append("<option value='" + row.id + "'>" + row.name + "</option>")
                });
            });
        };
        GetArea();
        $("#BranchId").select({
            placeholder: "انتخاب شاخه...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        }).on('change', function (e) {
            GetAreas();
        });
    });
</script>