@model FKRM.Application.ViewModels.GroupViewModel
<form id="create-form" method="post" asp-controller="Group" asp-action="OnPostCreateOrEdit" 
      asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">نام گروه</label>
                <div class="col-md-9">
                    <input type="text" asp-for="Name" name="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">زمینه</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select name="AreaId" class="form-control select2bs4" id="AreaId" asp-for="AreaId" asp-items="@Model.Areas">
                        </select>
                    </div>
                    <span asp-validation-for="AreaId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">ذخیره</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">انصراف</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
    $("#AreaId").select2({
        placeholder: "انتخاب زمینه...",
        theme: "bootstrap4",
        escapeMarkup: function (m) {
            return m;
        }
    });
</script>