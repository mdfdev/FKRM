@model SchoolViewModel
<form id="create-form" method="post" asp-controller="School" asp-action="OnPostCreateOrEdit"
      asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-md-4 col-form-label">نام مدرسه</label>
                <div class="col-md-8">
                    <input type="text" autocomplete="off" maxlength="100" asp-for="Name" name="Name" class="form-control" placeholder="نام مدرسه">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">کد مدرسه</label>
                <div class="col-md-8">
                    <input type="text" autocomplete="off" maxlength="8" asp-for="Code" name="Code" class="form-control" placeholder="کد مدرسه">
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">جنسیت</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="GenderId" class="custom-select custom-select-sm mb-3" id="GenderId" asp-for="GenderId" asp-items="@Model.Genders">
                        </select>
                    </div>
                    <span asp-validation-for="GenderId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">ویژگی مدرسه</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="FeatureId" class="custom-select custom-select-sm mb-3" id="FeatureId" asp-for="FeatureId" asp-items="@Model.Features">
                        </select>
                    </div>
                    <span asp-validation-for="FeatureId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">نوع واحد سازمانی</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="OUTypeId" class="custom-select custom-select-sm mb-3" id="OUTypeId" asp-for="OUTypeId" asp-items="@Model.OUTypes">
                        </select>
                    </div>
                    <span asp-validation-for="OUTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">نوع اداره</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="UnitTypeId" class="custom-select custom-select-sm mb-3" id="UnitTypeId" asp-for="UnitTypeId" asp-items="@Model.UnitTypes">
                        </select>
                    </div>
                    <span asp-validation-for="UnitTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">منطقه</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="DistrictId" class="custom-select custom-select-sm mb-3" id="DistrictId" asp-for="UnitTypeId" asp-items="@Model.Districts">
                        </select>
                    </div>
                    <span asp-validation-for="DistrictId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <div class="custom-control custom-switch">
                        <input class="custom-control-input" asp-for="HasParentSchool" id="HasParentSchool" type="checkbox">
                        <label class="custom-control-label" for="HasParentSchool">هنرستان وابسته</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">

                <label class="col-md-4 col-form-label">مدرسه اصلی</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="ParentSchoolId" disabled class="form-control selectpicker mb-3" id="ParentSchoolId" asp-for="ParentSchoolId" asp-items="@Model.ParentSchools">
                        </select>
                    </div>
                    <span asp-validation-for="ParentSchoolId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">شاخه</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <select name="BranchId" class="custom-select custom-select-sm mb-3" id="BranchId" asp-for="BranchId" asp-items="@Model.Branches">
                        </select>
                    </div>
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">ذخیره</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">انصراف</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $(document).ready(function () {
        $('#HasParentSchool').change(function () {
            if ($(this).prop('checked')) {
                $("#ParentSchoolId").prop("disabled", false);
            } else {
                $("#ParentSchoolId").prop("disabled", true);
            }
        })

        $("#BranchId").select({
            placeholder: "انتخاب شاخه...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });

        $("#DistrictId").select({
            placeholder: "انتخاب منطقه...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
        $("#GenderId").select({
            placeholder: "انتخاب جنسیت...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
        $("#FeatureId").select({
            placeholder: "انتخاب ویژگی مدرسه...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
        $("#OUTypeId").select({
            placeholder: "انتخاب نوع واحد سازمانی...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
        $("#UnitTypeId").select({
            placeholder: "انتخاب نوع اداره...",
            theme: "bootstrap4",
            escapeMarkup: function (m) {
                return m;
            }
        });
    });
</script>