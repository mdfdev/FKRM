@model IEnumerable<FKRM.Application.ViewModels.NotificationViewModel>
<table id="notificationTable" class="table table-hover table-sm table-striped data-table no-wrap mb-0 fs--1 w-100">
    <thead class="bg-200">
        <tr>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="bg-white">
        @foreach (var notification in Model)
        {
        <tr class="hover-actions-trigger hover-shadow">
            <td>
                @notification.Subject
            </td>
            <td>
                @notification.Body
            </td>
            <td>
                @notification.AddedDate
            </td>
            <td>
                @notification.ModifiedDate
            </td>
            <td>
                <div class="btn-group btn-group-sm hover-actions r-0" role="group">

                    <form id="form_delete_@notification.Id" asp-controller="Notification" method="post"
                          asp-action="OnPostDelete" asp-route-id="@notification.Id" onsubmit="return jQueryModalDelete(this)">
                        <a href="javascript:$('#form_delete_@notification.Id').submit();" data-placement="top" class="btn btn-light">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </form>

                    <button class="btn btn-light" onclick="jQueryModalGet('/notification/OnGetCreateOrEdit?id=@notification.Id','ویرایش پیام')"
                            type="button" data-placement="top" title="ویرایش">
                        <span class="fas fa-edit"></span>
                    </button>
                    <a class="btn btn-light" title="Snooze"><span class="fas fa-clock"></span></a>
                </div>
            </td>
        </tr>
        }
    </tbody>
    <tfoot class="bg-200">
        <tr>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th></th>
        </tr>
    </tfoot>
</table>
<script>
    $(document).ready(function () {
        $("#notificationTable").DataTable({
            responsive: true,
            "order": [[0, "asc"]],
            columnDefs: [
                {
                    "targets": [2, 3],
                    "visible": false
                }
            ],
        });
    });
</script>
