@model IEnumerable<NotificationViewModel>
<table id="notificationTable"  class="table table-hover table-sm table-striped data-table no-wrap mb-0 fs--1 w-100">
    <thead class="bg-200">
        <tr>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="bg-white">
        @foreach (var notification in Model)
        {
        <tr class="hover-actions-trigger hover-shadow">
            <td>
                @notification.Subject
            </td>
            <td>
                @notification.Body
            </td>
            <td>
                @notification.AddedDate
            </td>
            <td>
                @notification.ModifiedDate
            </td>
            <td class="py-2 align-middle white-space-nowrap">
                <div class="dropdown text-sans-serif">
                    <button class="btn btn-link text-600 btn-sm dropdown-toggle btn-reveal mr-3" type="button"
                            id="order-dropdown-1" data-toggle="dropdown" data-boundary="viewport" aria-haspopup="true" aria-expanded="false">
                        <span class="fas fa-ellipsis-h fs--1"></span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right border py-0" aria-labelledby="order-dropdown-1">
                        <div class="bg-white py-2">
                            <a class="dropdown-item" onclick="jQueryModalGet('/notification/OnGetCreateOrEdit?id=@notification.Id','ویرایش پیام')">ویرایش</a>
                            <div class="dropdown-divider"></div>
                            <form id="form_delete_@notification.Id" asp-controller="Notification" method="post"
                                  asp-action="OnPostDelete" asp-route-id="@notification.Id" onsubmit="return jQueryModalDelete(this)">
                                <a href="javascript:$('#form_delete_@notification.Id').submit();" class="dropdown-item text-danger">
                                    حذف
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        }
    </tbody>
    <tfoot class="bg-200">
        <tr>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            <th class="sort">
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th></th>
        </tr>
    </tfoot>
</table>
<script>
    $(document).ready(function () {
        $("#notificationTable").DataTable({
            responsive: true,
            "order": [[0, "asc"]],
            columnDefs: [
                {
                    "targets": [2, 3],
                    "visible": false
                }
            ],
        });
    });
</script>
